rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Kullanıcılar koleksiyonu - sadece kendi verilerini okuyabilir/yazabilir
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Doğrulama kodları koleksiyonu - herkes yazabilir, sadece kendi kodunu okuyabilir
    match /verification_codes/{email} {
      allow read, write: if true; // Geçici olarak herkese izin ver
    }
    
    // Diğer tüm koleksiyonlar için varsayılan kural
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
} 